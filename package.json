{
  "name": "vscode-styra",
  "displayName": "Styra",
  "icon": "styra_icon-blue.png",
  "description": "A VSCode extension for the Styra CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/styraInc/vscode-styra/"
  },
  "publisher": "styra",
  "version": "0.0.6-alpha",
  "private": true,
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other", "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:.styra/config"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "styra.link.init",
        "title": "Styra Link: Initialize..."
      },
      {
        "command": "styra.link.config-git",
        "title": "Styra Link: Configure Git..."
      },
      {
        "command": "styra.link.test",
        "title": "Styra Link: Test"
      },
      {
        "command": "styra.link.validate-decisions",
        "title": "Styra Link: Validate Decisions"
      },
      {
        "command": "styra.link.search",
        "title": "Styra Link: Search..."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Styra DAS Configuration",
      "properties": {
        "styra.checkUpdateInterval": {
          "type": "number",
          "minimum": 0,
          "maximum": 30,
          "title": "Check Update Interval",
          "description": "How often to check for updates to the Styra CLI (in days)",
          "default": 1
        },
        "styra.debug": {
          "type": "boolean",
          "title": "Diagnostic Details",
          "description": "Reveals API calls in output pane",
          "default": false
        }
      }
    },
    "languages": [
      {
        "id": "rego",
        "aliases": [
          "Rego",
          "rego"
        ],
        "extensions": [
          ".rego"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rego",
        "scopeName": "source.rego",
        "path": "./syntaxes/Rego.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "rego",
        "path": "./snippets/styra-common.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "package": "vsce package --pre-release",
    "package:install": "code --install-extension vscode-styra-${npm_package_version}.vsix",
    "check-licenses": "./packaging/validate-license.sh",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint --fix src --ext ts",
    "pretest-vscode": "npm run compile && npm run lint",
    "test-vscode": "node ./out/test/runTest.js",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/command-exists": "^1.2.0",
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.2.5",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.5.12",
    "@types/semver": "^7.3.13",
    "@types/shell-escape": "^0.2.1",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-jest": "^29.3.1",
    "esbuild": "^0.17.6",
    "eslint": "^7.27.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "glob": "^7.1.7",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "fs-extra": "^10.0.0",
    "move-file": "^2.1.0",
    "node-fetch": "^2.6.1",
    "semver": "^7.3.8",
    "shell-escape": "^0.2.0"
  }
}
